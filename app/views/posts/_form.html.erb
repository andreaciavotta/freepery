<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post, label: "Messaggio", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Scrivi un messaggio", autofocus: true %>
     <br>
    <%= f.file_field :postimage %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" , value: "Invia" %>
<% end %>
