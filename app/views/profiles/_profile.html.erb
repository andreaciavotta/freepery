<div class="column is-one-quarter">
	<nav class="panel">
		<p class="panel-heading">Profilo</p>
		<div class="panel-block">
			<article class="media">
				<div class="media-left">
					<figure class="image is-64x64">
						<%= gravatar_image_tag(@user.email, size: 64, alt: @user.first_name) %>
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p>
							<strong><%= @user.first_name + " " + @user.last_name %></strong><br />
							<small><%= @user.username %></small><br />
                            <small>Data di nascita: <%= @user.birthday %></small><br />
                            <% if @user.address? %><small>Citt√†: <%= @user.address %></small><% end %>
						</p>
					</div>
				</div>
			</article>
		</div>
		<div class="panel-block">
			<div class="level is-mobile">
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Posts</p>
						<p class="title is-6"><%= @user_posts.count %></p>
					</div>
				</div>
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Likes</p>
						<p class="title is-6"><%= @user.likes.count%></p>
					</div>
				</div>
					<div class="level-item has-centered-text">
					<div>
						<p class="heading">Commenti</p>
						<p class="title is-6"><%= @comments_count %></p>
					</div>
				</div>
			</div>
		</div>
	</nav>
    <% if account_signed_in? && current_account.id != @user.id %>
                <%= link_to "Invia un messaggio privato", conversations_path(sender_id: current_account.id, recipient_id: @user.id), method: 'post', class:"button is-link" %><br>
    <% end %>

</div>
