<section class="form-auth text-center">
<h1 class="title is-2 has-text-grey">Modifica commento</h1>

<%= simple_form_for([@post, @reply]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :reply, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>

  <%= f.button :submit, 'Modifica', class:'button is-info' %>
<% end %>
</section>
